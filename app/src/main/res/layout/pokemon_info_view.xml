<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/pokemon_info_view">

    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            tools:srcCompat="@mipmap/poke_ball_icon"
            android:id="@+id/pokemonPic"
            app:srcCompat="@mipmap/poke_ball_icon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:text="Type(s)"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/types"
            android:textSize="18sp"
            android:textAlignment="viewStart"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/pokemonPic"/>

    <TextView
            android:text="Height"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/height"
            android:textSize="18sp"
            android:textAlignment="viewStart"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/types"
            app:layout_constraintStart_toStartOf="@+id/types"
            app:layout_constraintEnd_toEndOf="@+id/types"/>

    <TextView
            android:text="Weight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/weight"
            android:textSize="18sp"
            android:textAlignment="viewStart"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/height"
            app:layout_constraintStart_toStartOf="@+id/height"
            app:layout_constraintEnd_toEndOf="@+id/height"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/pokemonDescText"
            android:textSize="18sp"
            tools:text="Pokemon Description Text difuaoidufoaiuf oaudfoiuafouaofudaoufdoaufdoaufoafuoaufdoaufoaufoaufouaf\"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pokemonName"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pokemonName"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/pokemonPic"
            app:layout_constraintTop_toBottomOf="@+id/pokemonPic"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/pokemonPic"/>
</androidx.constraintlayout.widget.ConstraintLayout>