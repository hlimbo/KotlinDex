<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/pokemon_info_view">

    <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            tools:srcCompat="@tools:sample/avatars[2]"
            android:id="@+id/pokemonPic"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher"/>

    <TextView
            android:text="Type(s)"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/types"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:textSize="18sp"
            android:textAlignment="viewStart"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/pokemonName"
            android:layout_marginEnd="164dp"
            app:layout_constraintEnd_toEndOf="@+id/pokemonName"/>

    <TextView
            android:text="Height"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/height"
            app:layout_constraintStart_toStartOf="@+id/types"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/types"
            app:layout_constraintEnd_toEndOf="@+id/types"
            android:textAlignment="viewStart"/>

    <TextView
            android:text="Weight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/weight"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/height"
            app:layout_constraintStart_toStartOf="@+id/height"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/height"
            android:textAlignment="viewStart"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/pokemonDescText"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/types"
            app:layout_constraintStart_toEndOf="@+id/types"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            tools:text="Pokemon Description Text"/>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pokemonName"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textSize="24sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/pokemonPic"
            app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>