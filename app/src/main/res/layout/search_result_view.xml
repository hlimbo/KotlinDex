<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="64dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/pokemonIcon"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/pokemonName"
            app:layout_constraintBottom_toBottomOf="@+id/pokemonName"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/pokemonName" android:textSize="24sp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" tools:text="Bulbasaur" android:textAlignment="viewStart"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toStartOf="@+id/pokemonIcon"/>
</androidx.constraintlayout.widget.ConstraintLayout>