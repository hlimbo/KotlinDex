<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/search_result_entry">
    <TextView
            android:text="#1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pokemonNumber"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="#1"
            app:layout_constraintVertical_bias="1.0"/>

    <ImageView
            android:layout_width="64dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/pokemonIcon"
            android:layout_height="64dp"
            app:layout_constraintTop_toTopOf="@+id/pokemonName"
            app:layout_constraintBottom_toBottomOf="@+id/pokemonName"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/pokemonName"
            android:textSize="24sp"
            tools:text="Bulbasaur"
            android:textAlignment="viewStart"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/pokemonIcon"
            android:text="Bulbasaur"
            app:layout_constraintStart_toEndOf="@+id/pokemonNumber"
            android:layout_marginStart="16dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/pokemonNumber"/>
</androidx.constraintlayout.widget.ConstraintLayout>